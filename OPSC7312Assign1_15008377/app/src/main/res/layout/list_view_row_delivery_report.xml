<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_bar_margin"
        android:layout_marginBottom="@dimen/app_bar_margin"
        android:layout_marginLeft="@dimen/button_padding"
        android:layout_marginRight="@dimen/button_padding"
        android:background="@color/white"
        android:elevation="@dimen/card_view_content_padding"
        app:contentPadding="@dimen/card_view_content_padding"
        app:cardCornerRadius="@dimen/card_view_corner_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_delivery_id"
                    style="@style/ListViewTextStyle"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_delivery_client_id"
                    style="@style/ListViewTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_delivery_date"
                    style="@style/ListViewTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_delivery_complete"
                    style="@style/ListViewTextStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_delivery_items"
                    style="@style/ListViewTextStyle"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:id="@+id/button_delete_delivery"
                    android:focusable="false"
                    style="@style/SecondaryButtonStyle"
                    android:paddingTop="@dimen/button_margin"
                    android:paddingBottom="@dimen/button_margin"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_mark_delivery_as_complete"
                    style="@style/SecondaryButtonStyle"
                    android:text="@string/button_mark_delivery_as_complete" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>